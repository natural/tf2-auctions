<html metal:use-macro="context.content.macros.layout">
<head>
    <title metal:fill-slot="title">Listing Detail -- </title>
</head>
<body>
    <div metal:fill-slot="main" class="detail-view">
	<h1>
	    <span class="hilite"></span>
	    <span id="listing-detail-title">Listing</span>
	</h1>
	<span id="listing-detail-load" class="centered">Loading...</span>

	<div id="listing-detail-main" class="centered m-top-1 null">
	    <div><label>Description:</label><div><strong id="listing-detail-description"></strong></div></div>
	    <div><label>Items:</label>
		<div class="items-view" id="listing-detail-items">
		    <table><tr></tr></table>
		</div>
	    </div>
	    <div><label>Status:</label><div><strong id="listing-detail-status"></strong></div></div>
	    <div><label>Expires:</label><div><strong id="listing-detail-expires"></strong></div></div>
	    <div><label>Minium Bid:</label>
		<div class="items-view" id="listing-detail-min-bid">
		    <table><tr></tr></table>
		</div>
	    </div>
	    <div><label>Created:</label><div><strong id="listing-detail-created"></strong></div></div>
	    <div><label>Owner:</label><div><strong id="listing-detail-owner"></strong></div></div>

	    <div>
		<label>Bids: <span id="listing-detail-bidcount"></span></label>
		<div id="listing-detail-bids"></div>
	    </div>

	 </div>
    </div>
</body>
</html>
