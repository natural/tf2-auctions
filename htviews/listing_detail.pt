<html metal:use-macro="context.content.macros.layout">
<head>
    <title metal:fill-slot="title">TF2Bay.com Listing</title>
    <metal:css fill-slot="style">
	<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css"
	      rel="stylesheet" type="text/css" />
        <metal:slot define-slot="style" />
    </metal:css>
    <metal:js fill-slot="script">
	<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.5/jquery-ui.min.js"
		type="text/javascript"></script>
        <metal:slot define-slot="script" />
    </metal:js>

</head>
<body>
    <div metal:fill-slot="main" tal:define="slug 'listing-detail'">
	<h1 id="${slug}-title-pod" class="null mb05">
	    <span class="hilite"></span>
	    <span id="${slug}-title"></span> (<span id="${slug}-status"></span>)
	</h1>

	<div id="${slug}-content" class="null center detail-view">
	    <div id="${slug}-left">
		<div class="mb1">
		    <label>Description:</label>
		    <div class="m1">
			<div class="desc" id="${slug}-description"></div>
		    </div>
		</div>
		<div>
		    <label>Items:</label>
		    <div class="items-view" id="${slug}-items"><table></table></div>
		</div>
		<div class="mt1">
		    <label>Minium Bid:</label>
		    <div class="items-view" id="${slug}-min-bid"><table></table></div>
		</div>
		<div id="${slug}-auth-bid-pod" class="null mtb1">
		    <a class="button" id="${slug}-place-start" href="#">Place Your Bid</a>
		</div>
		<div id="${slug}-login-pod" class="null mtb1">
		    <h2>You have to login to place a bid for these items.</h2>
		</div>
            </div>
	    <div id="${slug}-right">
		<div class="owner p05">
		    <label>Created by
			<span><a id="${slug}-owner-link" href="#"></a></span>
		    </label>
		    <div class="center text-center m1">
			<a href="#" id="${slug}-owner-profile-link">
			    <img class="avatar" id="${slug}-owner-avatar" alt="foo" />
			</a>
                    </div>
		    <div class="center text-center m1">
			Rating: * * * * *  (96.3% or 17.5/ 100)
                    </div>

		    <div class="owner-links m1-top" id="${slug}-owner-links">
			<ul>
			    <li>
				<img src="/media/img/iconAddFriend.png" />
				<a href="#" id="${slug}-add-owner-friend">Add Steam Friend</a>
			    </li>
			    <li>
				<img src="/media/img/iconChat.png" />
				<a href="#" id="${slug}-chat-owner">Start Steam Chat</a>
			    </li>
			    <li>
				<img src="/media/img/iconListings.png" />
				<a href="#" id="${slug}-owner-listings">Other Listings</a>
			    </li>
			</ul>
		    </div>

		    <div id="${slug}-owner-controls" class="null center mtb1">
			<div id="${slug}-owner-controls-cancel" class="null">
			    <div class="m1">You own this listing, so you may cancel it:</div>
			    <div class="center text-center" id="${slug}-cancel-prompt">
				<a href="#" id="${slug}-cancel-show-confirm" class="button">Cancel this Listing</a>
			    </div>
			    <div class="center text-center null" id="${slug}-cancel-confirm">
				<label class="m1">Are you sure you want to cancel this listing?</label>
				<a href="#" class="button" id="${slug}-cancel-submit">Yes, Do It</a>
				<a href="#" class="button" id="${slug}-cancel-cancel">No, Don't</a>
			    </div>
			</div>
			<div id="${slug}-owner-controls-choose-winner" class="null">
			    <div class="m1">
				You own this listing and it's over,
				so you may choose a winner.  Select the
				winning bid below.
			    </div>
			</div>
                    </div>
		</div>
		<div class="mtb1">
		    <label>Time Left:</label>
		    <div class="ml1"><strong id="${slug}-timeleft" class="mono">&nbsp;</strong></div>
		</div>
		<div class="mb1">
		    <label>Expires:</label>
		    <div class="ml1"><strong id="${slug}-expires" class="mono"></strong></div>
		</div>
		<div class="mb1">
		    <label>Created:</label>
		    <div class="ml1"><strong id="${slug}-created" class="mono"></strong></div>
		</div>
            </div>
	    <div class="clear"></div>
        </div>

	<div id="${slug}-existing-bids-pod" class="null">
	    <div id="${slug}-existing-bids">
		<h1 class="pt05"><span class="hilite"></span>&nbsp;<span id="${slug}-bidcount"></span></h1>
		<div id="${slug}-bids">
		    <metal:include
			tal:define="slug slug+'-profile'; use_view False"
			metal:use-macro="context.table_parts.macros.bids_large" />
		</div>
	    </div>
	</div>


	<div id="${slug}-place-bid-pod" class="null center">
            <h1><span class="hilite"></span>Place Your Bid</h1>
	    <div class="organizer-view null" id="${slug}-own-backpack">
		<metal:include
		     tal:define="include_unplaced True; slug slug+'-bid'"
		     metal:use-macro="context.organizer_parts.macros.item_backpack" />

		<h3 id="${slug}-title">
		    Your Bid <span id="${slug}-add-bid-item-title-extra">(0 items)</span>
		</h3>

 		<div class="message center">
		    <div class="warning null" id="${slug}-add-bid-min-bid-warn"></div>
		</div>

		<metal:include
		     tal:define="slug slug+'-add-bid-item'"
		     metal:use-macro="context.organizer_parts.macros.item_chooser" />

		<div id="${slug}-add-bid-fields" class="center">
		<label>Private Message (Optional):</label>
		<div class="null" id="${slug}-bid-private-msg-default">You can enter a private message for the listing owner here.</div>
 		<div class="message null"><div class="error" id="${slug}-bid-private-msg-error"></div></div>
		<textarea id="${slug}-bid-private-msg" name="bid-private-msg"></textarea>

		<label>Public Message (Optional):</label>
		<div class="null" id="${slug}-bid-public-msg-default">You can also enter a message with your bid that will be visible to everyone.</div>
 		<div class="message null"><div class="error" id="${slug}-bid-public-msg-error"></div></div>
		<textarea id="${slug}-bid-public-msg" name="bid-public-msg"></textarea>
		</div>


		<div class="center mt2" id="${slug}-terms-pod">
                    <label for="" id="${slug}-add-bid-terms-desc">Site Rules, Terms and Conditions:</label>
 		    <div class="message null">
			<div class="error" id="${slug}-add-bid-terms-error"></div>
		    </div>
		    <div class="mt05">
			<input type="checkbox" id="${slug}-add-bid-terms" />
			I Agree to
                        <strong>
			    <a href="#" id="${slug}-add-bid-show-terms">the Site Rules and Terms of Use</a>.
			</strong>
		    </div>
                </div>

		<div id="${slug}-bid-buttons" class="center text-center m1">
		    <span class="button mr05">
			<a href="#" id="${slug}-bid-submit">Place Bid</a>
		    </span>
		    <span class="button">
			<a href="#" id="${slug}-bid-cancel">Cancel</a>
		    </span>
		</div>

	    <div id="${slug}-add-bid-response" class="center text-center">
		<div id="${slug}-add-bid-working" class="m1 null"></div>
		<div id="${slug}-add-bid-success" class="m1 null">
		    <span class="mr05">
			<a href="#" id="${slug}-add-bid-success-view"
			   class="button">View Bid</a>
		    </span>
		</div>
		<div class="message null">
		    <div id="${slug}-add-bid-error" class="error m1"></div>
		</div>
            </div>



	    </div>


	</div>
	<div class="clear"></div>


    </div>
</body>
</html>
