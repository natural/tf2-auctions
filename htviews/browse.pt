<html metal:use-macro="context.content.macros.layout">
<head>
    <title metal:fill-slot="title">tf2bay.com - browse listings</title>
</head>
<body>
    <metal:fill fill-slot="main">
        <h1 class="message"><span class="hilite"></span>Browse Listings</h1>

	<div id="filters">
	Filter by category:&nbsp;&nbsp;
	    <metal:filter tal:repeat="filt controller.filters()">
	        <a href="/browse?f=${filt[0]}">${filt[1]}</a>
		<metal:comma tal:replace="' &middot; '" tal:condition="not repeat.filt.end" />
	    </metal:filter>
	</div>
	<metal:wrapper tal:define="tid 'browse-listings'">
	    <metal:include use-macro="context.listing_parts.macros.listing_large" />
	</metal:wrapper>


        <div tal:condition="controller.steam_id" class="centered text-centered">
        Yo dawg, I heard you like browsers so I put a browser in your
        browser so you can browse while you're browsin!
        </div>
    </metal:fill>
</body>
</html>
