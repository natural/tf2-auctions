<metal:parts>


    <metal:macro define-macro="bids_large">
	<div id="${slug}-bids" tal:define="use_created use_created|True; use_view use_view|True">
	<div class="null prototype organizer-view">
            <table class="w100">
		<tbody>
                    <tr>
			<td tal:attributes="width '70%' if use_created else '100%'">
			    <div class="${slug}-bid-view-link m05 mb1" tal:condition="use_view">
				<a class="small-button">View</a>
			    </div>
			    <metal:display use-macro="context.organizer_parts.macros.item_display" />

			    <table class="w100">
				<tr>
				    <td class="w25">
					<strong class="bid-message-label">Message:</strong>
					<span class="bid-message"></span>
				    </td>
				    <td class="w25">
					<strong class="bid-status-label">Status:</strong>
					<span class="bid-status"></span>
				    </td>
				    <td class="w50">
					<strong class="bid-created-label">Created:</strong>
					<span class="bid-created mono"></span>
				    </td>
				</tr>
			    </table>
			</td>
			<td tal:condition="use_created">
			    <strong>Created By:</strong>
			    <div class="bid-owner-seed">
				<img src="" class="bid-avatar" />
				<span class="bid-owner"></span>
			    </div>
			</td>
		    </tr>
		</tbody>
            </table>
	</div>
	</div>
    </metal:macro>



    <metal:macro define-macro="listings_large">
	<div id="${slug}-listings" tal:define="use_created use_created|True">
	<div class="null prototype organizer-view">
            <table class="listing-view w100 mb1">
		<tbody>
                    <tr>
			<td tal:attributes="width '70%' if use_created else '100%'">
			    <div class="${slug}-listing-view-link m05 mb1">
				<a class="small-button">View</a>
			    </div>

			    <metal:display use-macro="context.organizer_parts.macros.item_display" />
			    <strong class="listing-description-label">Description:</strong>
			    <div class="listing-description"></div>
			</td>
			<td tal:condition="use_created">
			    <strong>Created By:</strong>
			    <div class="listing-owner-seed">
				<img src="" class="listing-avatar" />
				<span class="listing-owner"></span>
			    </div>
			</td>
		    </tr>
		</tbody>
            </table>
	</div>
	</div>
    </metal:macro>


    <metal:macro define-macro="listing_bids">
	<div class="null prototype">
            <table class="bid-table w100">
		<tbody>
                    <tr>
			<td class="${slug}-view-link" rowspan="2">
			    <div class="center text-center ${slug}-view-summary">
				<div style="white-space:nowrap;">
				    <img src="" class="bid-avatar" />
				    <span class="bid-owner"></span>
				</div>
			    </div>
			</td>
			<td class="w88">
			    <strong>Bid Items:</strong>
			    <metal:display use-macro="context.organizer_parts.macros.item_display" />
			</td>
		    </tr>
	            <tr>
			<td>
			    <strong>Message:</strong>
			    <div class="bid-message"></div>
			</td>
                    </tr>
		</tbody>
            </table>
	</div>
    </metal:macro>


</metal:parts>
