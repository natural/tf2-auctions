<html metal:use-macro="context.content.macros.layout">
<head>
    <title metal:fill-slot="title">tf2bay.com</title>
    <script metal:fill-slot="script" type="text/javascript" src="/media/scr/profile.js"></script>
</head>
<body>
    <metal:fill fill-slot="main" tal:define="id64 controller.steam_id">
	<form action="/api/v1/add-listing" method="post" tal:condition="False">
	    <input type="submit" value="Test" />
	</form>
	<div tal:condition="id64">
	    <h1 id="load-profile-msg">Loading your profile...</h1>
	    <script type="text/javascript">var __id64__ = '${id64}'</script>

	    <h1 class="message m-top-1"><span class="hilite"></span><a name="bids">My Bids</a></h1>
	    <div><div id="load-own-bids-msg"></div></div>

	    <h1 class="message m-top-1"><span class="hilite"></span><a name="listings">My Listings</a></h1>

	    <metal:wrapper tal:define="tid 'own-listings'">
                <metal:include use-macro="context.listing_parts.macros.listing_large" />
            </metal:wrapper>
	    <div><div id="load-own-listings-msg"></div></div>

	</div>
    </metal:fill>
</body>
</html>
