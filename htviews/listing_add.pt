<html metal:use-macro="context.content.macros.layout">
<head>
    <title metal:fill-slot="title">TF2Bay.com -- Add Listing</title>
    <metal:css fill-slot="style">
	<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css"
	      rel="stylesheet" type="text/css" />
        <metal:slot define-slot="style" />
    </metal:css>
    <metal:js fill-slot="script">
	<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.5/jquery-ui.min.js"
		type="text/javascript"></script>
        <metal:slot define-slot="script" />
    </metal:js>
</head>
<body>
    <metal:main fill-slot="main" tal:define="slug 'listing-add'">
	<h1 class="mt1 mb05"><span class="hilite"></span>Add a New Listing</h1>
	<div class="organizer-view null" id="${slug}-own-backpack">
	    <metal:include
		 tal:define="include_unplaced True; slug 'a'"
		 metal:use-macro="context.organizer_parts.macros.item_backpack" />
	    <h3 id="${slug}-title">
		Your Listing <span id="${slug}-item-title-extra">(0 items)</span>
	    </h3>
	    <metal:include
		 tal:define="slug slug+'-item'"
		 metal:use-macro="context.organizer_parts.macros.item_chooser" />

	    <div id="${slug}-fields" class="center">
		<label for="${slug}-fields">Description:</label>
 		<div class="message null"><div class="error" id="${slug}-description-error"></div></div>
		<textarea id="${slug}-description" name="${slug}-description"></textarea>
		<label for="${slug}-duration">Duration:</label>
 		<div class="message null"><div class="error" id="${slug}-duration-slider-error"></div></div>
		<div class="center">
		    <div id="${slug}-duration">30 days</div>
		    <div id="${slug}-duration-slider" name="duration"></div>
		    <div class="clear"></div>
		</div>

		<div class="center">
                    <label for="${slug}-min-bid" id="${slug}-min-bid-label">
			Minimum Bid (Optional):
		    </label>
                </div>
		<div class="center text-center">
		    <label id="${slug}-min-bid-show">
			<a href="#">Click to Show Items</a>
		    </label>
		</div>

		<div class="null" id="${slug}-min-bid-pod">
		    <div>
			Select the minimum items you will consider for
			a trade. You can select up to 10 items.
		    </div>
		    <div class="organizer-view" id="${slug}-min-bid">
			<metal:include
			     tal:define="slug 'mb'"
			     metal:use-macro="context.organizer_parts.macros.item_backpack" />
			<label id="${slug}-min-bid-title">
			    Minimum Bid <span id="${slug}-min-bid-title-extra">(0 items)</span>
			</label>
			<metal:include
			     tal:define="slug 'listing-add-min-bid'"
			     metal:use-macro="context.organizer_parts.macros.item_chooser" />
		    </div>
		</div>

		<div class="center mt2">
                    <label for="" id="${slug}-terms-desc">Site Rules, Terms and Conditions:</label>
 		    <div class="message null">
			<div class="error" id="${slug}-terms-error"></div>
		    </div>
		    <div class="mt05">
			<input type="checkbox" id="${slug}-terms" />
			I Agree to follow the Site Rules and Terms of Use.
                        <span><a href="#" id="${slug}-show-terms">(Click here to show them)</a></span>
		    </div>
                </div>

	    </div>

	    <div id="${slug}-buttons" class="center text-center m2">
		<span class="mr05">
		    <a href="#" id="${slug}-submit" class="button">OK, Post It</a>
		</span>
		<span class="">
		    <a href="#" id="${slug}-cancel" class="button">Nah, Cancel</a>
		</span>
	    </div>

	    <div id="${slug}-response" class="center text-center">
		<div id="${slug}-working" class="m1 null"></div>
		<div id="${slug}-success" class="m1 null">
		    <span class="mr05">
			<a id="${slug}-success-view" class="button" href="#">View Listing</a>
		    </span>
		</div>
		<div class="message null">
		    <div id="${slug}-error" class="error m1"></div>
		</div>
            </div>


	</div>

    </metal:main>
</body>
</html>
