<html metal:extend-macro="context.base.macros.layout" metal:define-macro="layout">
<head>
    <metal:slot fill-slot="meta">
        <meta http-equiv="Content-type" content="text/html;charset=UTF-8" />
    </metal:slot>
    <metal:slot fill-slot="style">
        <link rel="media" href="/media/screen.css" type="text/css" media="screen, projection" />
        <link rel="stylesheet" href="/media/site.css" type="text/css" media="screen, projection" />
        <link rel="stylesheet" href="/media/print.css" type="text/css" media="print" />
        <!--[if lt IE 8]><link rel="stylesheet" href="/media/ie.css" type="text/css" media="screen, projection"><![endif]-->
        <metal:slot define-slot="style" />
    </metal:slot>
    <metal:slot fill-slot="script">
        <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>
	<script type="text/javascript" src="/media/scr/hacks.js"></script>
	<script type="text/javascript" src="/media/scr/content.js"></script>
        <metal:slot define-slot="script" />
    </metal:slot>
</head>


<body metal:fill-slot="body">

    <div id="header_wrapper">
	<metal:login tal:define="auth controller.is_authen()">
	<div id="header" metal:fill-slot="header">
	    <a href="/"><img src="/media/img/tf2bay-logo.png" /></a>
	    <div id="header_button_wrapper">
		    <span class="button"><a href="/browse">Browse</a></span>
		    <span class="button"><a href="/search">Search</a></span>
		    <span tal:condition="not auth" class="button login_button"><a href="/login">Login</a></span>
		    <span tal:condition="auth" class="button logout_button"><a href="${controller.logout_url}">Logout</a></span>
	    </div>
	    <metal:define define-slot="header" />
	</div>
	</metal:login>
    </div>

    <div id="profile-menu" metal:fill-slot="menu">
	<div id="profile-buttons" tal:condition="controller.is_authen()">
	    <span class="profile-button"><a href="/profile#bids">My Bids</a></span>
	    <span class="profile-button"><a href="/profile#listings">My Listings</a></span>
	    <span><metal:slot define-slot="profile-buttons-next" /></span>
	</div>
	<metal:slot define-slot="menu" />
    </div>


	<div id="content">
	    <div id="message"></div>
	    <metal:slot metal:fill-slot="main">
		<metal:slot define-slot="main" />
	    </metal:slot>
	</div>

	<div id="footer" metal:fill-slot="footer">
	    <div class="text-centered">
		<a href="#">about</a> |
		 <a href="#">faq</a> |
		 <a href="#">terms of service</a> | etc...
	    </div>
	    <metal:slot define-slot="footer" />
	    <div class="text-centered">
		Powered by <a href="http://steampowered.com">Steam</a>
		(but we don't have anything to do with Valve or Steam)
	    </div>

	</div>


</body>
</html>
