<html metal:use-macro="context.content.macros.layout">
<head>
    <title metal:fill-slot="title">TF2Auctions.com - Login</title>
</head>
<body>
    <metal:fill fill-slot="main">
	<div id="login-content" class="w50 center mt1">
	    <h1 class="message"><span class="hilite">&nbsp;</span>Login.  It's Safe.</h1>
	    <div class="m1">
		Click the link to sign in
		with your Steam account.  This site never gets your
		username or your password so you're pretty safe - at
		least from us.
	    </div>
	    <div id="login-link" class="w50 center mt1">
	    <a href="${controller.login_url()}" title="Sign in through Steam">
		<img alt="Sign in through Steam" width="154" height="23"
		     src="http://steamcommunity.com/public/images/signinthroughsteam/sits_small.png" />
	    </a>
	    </div>
	</div>

    </metal:fill>
</body>
</html>
