<html metal:use-macro="context.content.macros.layout">
<head>
    <title metal:fill-slot="title">tf2bay.com</title>
    <metal:css fill-slot="style">
	<link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css"
	      rel="stylesheet" type="text/css" />
        <metal:slot define-slot="style" />
    </metal:css>
    <metal:js fill-slot="script">
	<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.5/jquery-ui.min.js"
		type="text/javascript"></script>
        <metal:slot define-slot="script" />
    </metal:js>
</head>
<body>
    <metal:main fill-slot="main">
	<div id="terms-dialog" class="null">
	    rules, terms, etc.  fetched via ajax, yo.
        </div>

	<h1 class="mt1 mb05"><span class="hilite"></span>Add a New Listing</h1>
	<div class="organizer-view null" id="add-listing-own-backpack">
	    <metal:settings tal:define="include_unplaced True; slug 'a'">
		<metal:include use-macro="context.organizer_parts.macros.item_backpack" />
	    </metal:settings>

	    <h3 id="add-listing-title">
		Your Listing <span id="add-listing-item-title-extra">(0 items)</span>
	    </h3>
	    <metal:settings tal:define="slug 'add-listing-item'">
		<metal:include use-macro="context.organizer_parts.macros.item_chooser" />
	    </metal:settings>


	    <div id="add-listing-fields" class="centered">
		<label for="add-listing-fields">Description:</label>
 		<div class="message null"><div class="error" id="add-listing-description-error"></div></div>
		<textarea id="add-listing-description" name="add-listing-description"></textarea>
		<label for="add-listing-duration">Duration:</label>
 		<div class="message null"><div class="error" id="add-listing-duration-slider-error"></div></div>
		<div class="centered">
		    <div id="add-listing-duration">30 days</div>
		    <div id="add-listing-duration-slider" name="duration"></div>
		    <div class="clear"></div>
		</div>

		<div class="centered">
                    <label for="add-listing-min-bid" id="add-listing-min-bid-label">
			Minimum Bid (Optional):
		    </label>
                </div>
		<div class="centered text-centered">
		    <label id="add-listing-min-bid-show">
			<a href="#">Click to Show Items</a>
		    </label>
		</div>

		<div class="null" id="add-listing-min-bid-wrapper">
		    <div>
			Select the minimum items you will consider for
			a trade. You can select up to 10 items.
		    </div>
		    <div class="organizer-view" id="add-listing-min-bid">
			<metal:settings tal:define="slug 'mb'">
			    <metal:include use-macro="context.organizer_parts.macros.item_backpack" />
			</metal:settings>
			<label id="add-listing-min-bid-title">
			    Minimum Bid <span id="add-listing-min-bid-title-extra">(0 items)</span>
			</label>
			<metal:settings tal:define="slug 'add-listing-min-bid'">
			    <metal:include use-macro="context.organizer_parts.macros.item_chooser" />
			</metal:settings>
		    </div>
		</div>

		<div class="centered mt2">
                    <label for="" id="add-listing-terms-desc">Site Rules, Terms and Conditions:</label>
 		    <div class="message null">
			<div class="error" id="add-listing-terms-error"></div>
		    </div>
		    <div class="mt05">
			<input type="checkbox" id="add-listing-terms" />
			I Agree to follow the Site Rules and Terms of Use.
                        <span><a href="#" id="add-listing-show-terms">(Click here to show them)</a></span>
		    </div>
                </div>

	    </div>

	    <div id="add-listing-buttons" class="centered text-centered m2">
		<span class="submit button mr05">
		    <a href="#" id="add-listing-submit">OK, Post It</a>
		</span>
		<span class="cancel button">
		    <a href="#" id="add-listing-cancel">Nah, Cancel</a>
		</span>
	    </div>

	    <div id="add-listing-response" class="centered text-centered">
		<div id="add-listing-working" class="m1 null"></div>
		<div id="add-listing-success" class="m1 null">
		    <span class="button mr05">
			<a href="#" id="add-listing-success-view">View Listing</a>
		    </span>
		</div>
		<div id="add-listing-error" class="error m1 null"></div>
            </div>


	</div>

    </metal:main>
</body>
</html>
