<html metal:use-macro="context.content.macros.layout">
<head>
    <title metal:fill-slot="title">TF2Bay.com Listing</title>
    <metal:js fill-slot="script">
	<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.5/jquery-ui.min.js"
		type="text/javascript"></script>
        <metal:slot define-slot="script" />
    </metal:js>

</head>
<body>
    <div metal:fill-slot="main" tal:define="slug 'listing-detail'">
	<script type="text/javascript">var idSlug="${slug}"</script>
	<h1 id="${slug}-title-wrapper" class="null mb05">
	    <span class="hilite"></span>
	    <span id="${slug}-title"></span> - <span id="${slug}-status"></span>
	</h1>

	<div id="${slug}-content" class="null centered detail-view">
	    <div id="${slug}-left">
		<div class="mb1">
		    <label>Description:</label>
		    <div class="m1"><strong id="${slug}-description"></strong></div>
		</div>
		<div>
		    <label>Items:</label>
		    <div class="items-view" id="${slug}-items"><table></table></div>
		</div>
		<div class="mt1">
		    <label>Minium Bid:</label>
		    <div class="items-view" id="${slug}-min-bid"><table></table></div>
		</div>
		<div id="${slug}-auth-bid-wrapper" class="null mtb1">
		    <a class="button bid-button" id="${slug}-place-start" href="#">Place Your Bid</a>
		</div>
		<div id="${slug}-login-wrapper" class="null mtb1">
		    <h2>You have to login to place a bid for these items.</h2>
		</div>
            </div>
	    <div id="${slug}-right">
		<div class="owner">
		    <label>Created by
			<span><a id="${slug}-owner-link" href="#"></a></span>
		    </label>
		    <div class="centered text-centered m1">
			<img class="avatar" id="${slug}-owner-avatar" />
                    </div>
		    <div class="centered text-centered m1">
			Rating: * * * * *  (96.3% or 17.5/ 100)
                    </div>

		    <div class="owner-links m1-top" id="${slug}-owner-links">
			<div class="m1">
			    <div><img src="/media/img/iconAddFriend.gif" />
				<a href="#" id="${slug}-add-owner-friend">Add Steam Friend</a>
			    </div>
			    <div><img src="/media/img/iconChat.gif" />
				<a href="#" id="${slug}-chat-owner">Start Steam Chat</a>
			    </div>
			    <div><a href="#">Other Listings</a></div>
			</div>
		    </div>

		    <div id="${slug}-owner-controls" class="null centered mtb1">
			<div class="m1">You own this listing, so you may cancel it:</div>
			<div class="centered text-centered" id="${slug}-cancel-prompt">
			    <span class="button bid-button"><a href="#" id="${slug}-cancel-show-confirm">Cancel this Listing</a></span>
			</div>
			<div class="centered text-centered null" id="${slug}-cancel-confirm">
			    <label class="m1">Are you sure you want to cancel this listing?</label>
			    <a href="#" class="button" id="${slug}-cancel-submit">Yes, Do It</a>
			    <a href="#" class="button" id="${slug}-cancel-cancel">No, Don't</a>
			</div>
                    </div>
		</div>
		<div class="mtb1">
		    <label>Time Left:</label>
		    <div class="ml1"><strong id="${slug}-timeleft">&nbsp;</strong></div>
		</div>
		<div class="mb1">
		    <label>Expires:</label>
		    <div class="ml1"><strong id="${slug}-expires"></strong></div>
		</div>
		<div class="mb1">
		    <label>Created:</label>
		    <div class="ml1"><strong id="${slug}-created"></strong></div>
		</div>
            </div>
	    <div class="clear"></div>
        </div>

	<div id="${slug}-existing-bids-wrapper" class="null">
	    <div id="${slug}-existing-bids">
		<h1 class="pt05"><span class="hilite"></span><span id="${slug}-bidcount"></span></h1>
		<div id="${slug}-bids"></div>
	    </div>
	</div>


	<div id="${slug}-place-bid-wrapper" class="null centered">
            <h1><span class="hilite"></span>Place Your Bid</h1>
	    <div class="organizer-view null" id="${slug}-own-backpack">
		<metal:settings tal:define="include_unplaced True; slug 'bid'">
		    <span id="${slug}-msg-backpack"></span>
		    <metal:include use-macro="context.organizer_parts.macros.item_backpack" />
		</metal:settings>
		<h3 id="${slug}-title">
		    Your Bid <span id="add-bid-item-title-extra">(0 items)</span>
		</h3>
		<metal:settings tal:define="slug 'add-bid-item'">
		    <metal:include use-macro="context.organizer_parts.macros.item_chooser" />
		</metal:settings>
		<div id="${slug}-bid-buttons" class="centered text-centered m1">
		    <span class="submit button mr05">
			<a href="#" id="${slug}-bid-submit">Place Bid</a>
		    </span>
		    <span class="cancel button">
			<a href="#" id="${slug}-bid-cancel">Cancel</a>
		    </span>
		</div>
	    </div>

	</div>
	<div class="clear"></div>

    </div>
</body>
</html>
