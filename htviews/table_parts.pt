<metal:parts>


    <metal:macro define-macro="listing_large">
	<div id="${slug}-listings" tal:define="use_created use_created|True">
	<div class="null prototype">
            <table class="listing-table w100 mb1">
		<tbody>
                    <tr>
			<td tal:attributes="width '70%' if use_created else '100%'">
			    <div class="${slug}-view-link m05 mb1">
				<a class="small-button">View</a>
				<strong>Items:</strong>
			    </div>

			    <metal:display use-macro="context.organizer_parts.macros.item_display" />
			    <strong class="listing-description-label">Description:</strong>
			    <div class="listing-description"></div>
			</td>
			<td tal:condition="use_created">
			    <strong>Created By:</strong>
			    <div class="listing-owner-wrapper">
				<img src="" class="listing-avatar" />
				<span class="listing-owner"></span>
			    </div>
			</td>
		    </tr>
		</tbody>
            </table>
	</div>
	</div>
    </metal:macro>


    <metal:macro define-macro="listing_bids">
	<div class="null prototype">
            <table class="bid-table w100">
		<tbody>
                    <tr>
			<td class="${slug}-view-link" rowspan="2">
			    <div class="centered text-centered ${slug}-view-summary">
				<div style="white-space:nowrap;">
				    <img src="" class="bid-avatar" />
				    <span class="bid-owner"></span>
				</div>
			    </div>
			</td>
			<td class="w88">
			    <strong>Bid Items:</strong>
			    <metal:wrapper>
				<metal:display use-macro="context.organizer_parts.macros.item_display" />
			    </metal:wrapper>
			</td>
		    </tr>
	            <tr>
			<td>
			    <strong>Message:</strong>
			    <div class="bid-message"></div>
			</td>
                    </tr>
		</tbody>
            </table>
	</div>
    </metal:macro>


</metal:parts>
