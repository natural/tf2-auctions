<html metal:use-macro="context.content.macros.layout">
<head>
    <title metal:fill-slot="title">TF2Auctions.com Profile</title>
    <metal:css fill-slot="style">
        <metal:slot define-slot="style" />
    </metal:css>
    <metal:js fill-slot="script">
	<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.5/jquery-ui.min.js"
		type="text/javascript"></script>
        <metal:slot define-slot="script" />
    </metal:js>
</head>
<body>
<metal:fill fill-slot="main" tal:define="slug 'profile'">
    <div id="${slug}-main-pod">
	<div id="tabs" class="tabs">
	    <ul>
		<li><h4><a href="#tabs-0">Details</a></h4></li>
		<li><h4><a href="#tabs-1">Listings</a></h4></li>
		<li><h4><a href="#tabs-2">Bids</a></h4></li>
		<li><h4><a href="#tabs-3">Backpack</a></h4></li>
		<li id="${slug}-settings-tab">
		    <h4><a href="#tabs-4">Settings</a></h4>
		</li>
	    </ul>

	    <div id="tabs-0">
		<!-- player profile badge on the right -->
		<div id="${slug}-badge-pod">
		    <div id="${slug}-badge" class="null owner">
			<div class="center text-center">
			    <h1 class="m05" id="${slug}-title"></h1>
			    <img id="${slug}-avatar" class="m1 profile-status" />
			    <div id="${slug}-status" class=""></div>
			    <h2 class="null m05" id="${slug}-is-you"></h2>
			    <div class="owner-links m1-top" id="${slug}-owner-links">
				<ul>
				    <li>
					<img src="/media/img/iconAddFriend.png" />
					<a href="#" id="${slug}-add-owner-friend">Add Steam Friend</a>
				    </li>
				    <li>
					<img src="/media/img/iconChat.png" />
					<a href="#" id="${slug}-chat-owner">Start Steam Chat</a>
				    </li>
				</ul>
			    </div>
			</div>
		    </div>
		</div>

		<!-- messages -->
		<div tal:condition="features.profile_messages" class="" id="${slug}-msg-pod">
		    <!-- inner wrapper for msg drop  -->
		    <div id="${slug}-leave-msg-pod" class="null">
			<h1>
			    <span class="hilite">&nbsp;</span><span id="${slug}-leave-msg-title"></span>
			</h1>
			<div class="mb1 mt05" id="${slug}-leave-msg-form">
			    <textarea id="${slug}-leave-msg-txt" name="${slug}-leave-msg-txt"></textarea>
			    <div class="text-right w50 mt1">
				<a href="#" onclick="return false" class="button" id="${slug}-leave-msg-submit">Submit</a>
			    </div>
			</div>
		    </div>
		    <!-- inner wrapper for msg view  -->
		    <div id="${slug}-view-msg-pod" class="null mb1">
			<h1 class="">
			    <span class="hilite">&nbsp;</span><span id="${slug}-view-msg-title"></span>
			    <span id="${slug}-view-msg-count"></span>
			</h1>
			<h2 id="${slug}-msg-none" class="null"></h2>
			<div id="${slug}-view-msg-pod" class="mt1">
			    <div class="null prototype organizer-view mb1">
				<div class="${slug}-msg-sender-seed">
				    <span class="${slug}-msg-sender-name"></span>
				    <div class="float-right w50 text-right mono ${slug}-msg-created-seed"></div>
				</div>
				<div class="${slug}-msg-text-seed mt05">
				    text
				</div>
				<div class="text-right p1">
				    <a href="#" onclick="return false" class="small-button ${slug}-msg-remove">Remove</a>
				</div>
			    </div>
			</div>
		    </div>
		</div>
	    </div>


		<!-- listings tab -->
		<div id="tabs-1">
		    <div id="${slug}-listings-pod">
			<div class="init-seed null">
			    <h1><span class="hilite">&nbsp;</span><span id="${slug}-listings-title"></span></h1>
			    <h2 class="null" id="${slug}-listings-loading"></h2>
			    <div class="null" id="${slug}-listings-inner">
				<h2 class="null" id="${slug}-listings-none"></h2>
				<metal:include
				     tal:define="rows 2; cols 5; use_created False"
				     metal:use-macro="context.table_parts.macros.listings_large" />
			    </div>
			</div>

		    </div>
		</div>

		<!-- bids tab -->
		<div id="tabs-2">
		    <div id="${slug}-bids-pod" class="">
			<div class="init-seed null">
			    <h1><span class="hilite">&nbsp;</span><span id="${slug}-bids-title"></span></h1>
			</div>
			<h2 class="null" id="${slug}-bids-loading"></h2>
			<div class="null" id="${slug}-bids-inner">
			    <h2 class="null" id="${slug}-bids-none"></h2>
			    <metal:include
				 tal:define="use_created False"
				 metal:use-macro="context.table_parts.macros.bids_large" />
			</div>
		    </div>
		</div>

		<!-- backpack tab -->
		<div id="tabs-3">
		    <div id="${slug}-backpack-pod" class="">
			<div class="init-seed null">
			    <h1>
				<span class="hilite">&nbsp;</span><span id="${slug}-backpack-title"></span>
			    </h1>
			</div>
			<h2 class="null" id="${slug}-backpack-loading"></h2>
			<div class="organizer-view null" id="${slug}-backpack-inner">
			    <h2 class="null" id="${slug}-backpack-none"></h2>
			    <metal:include
				 tal:define="include_unplaced True"
				 metal:use-macro="context.organizer_parts.macros.item_backpack_wide" />
			</div>
		    </div>
		</div>


		<div id="tabs-4">
		    <h1>
			<span class="hilite">&nbsp;</span><span id="${slug}-settings-title">My Settings</span>
		    </h1>

		    <div class="" id="settings-pod" tal:condition="not features.profile_settings">
			There's nothing to see here yet.
		    </div>

		    <div class="" id="settings-pod" tal:condition="features.profile_settings">
			<metal:include
			     tal:define="schema settings_schema"
			     metal:use-macro="context.form_parts.macros.schema_form" />
			<div class="">
			    <a href="#" class="button" onclick="return false" id="settings-save">Save</a>
			</div>
		    </div>
		</div>

	    </div>
	</div>

</metal:fill>
</body>
</html>
