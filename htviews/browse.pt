<html metal:use-macro="context.content.macros.layout">
<head>
    <title metal:fill-slot="title">tf2bay.com - browse listings</title>
</head>
<body>
    <metal:fill fill-slot="main">
        <h1><span class="hilite"></span>Browse Listings</h1>
	<div id="filters">
	    Filter by category:&nbsp;&nbsp;
	    <metal:filters tal:repeat="filt controller.filters()">
	        <input type="checkbox" name="${filt[0]}" />&nbsp;${filt[1]}&nbsp;&nbsp;
	    </metal:filters>
	</div>
	<div class="organizer-view">
	    <h2 class="null" id="browse-no-listings"></h2>
	    <metal:wrapper tal:define="slug 'browse'">
		<metal:include use-macro="context.table_parts.macros.listing_large" />
	    </metal:wrapper>
	</div>
        <div class="centered text-centered m-t-1">
            Yo dawg, I heard you like browsers so I put a browser in
            your browser so you can browse while you're browsin!
        </div>
    </metal:fill>
</body>
</html>
